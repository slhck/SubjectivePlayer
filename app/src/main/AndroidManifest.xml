<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.SubjectivePlayer">

        <activity
            android:name=".SubjectivePlayerActivity"
            android:exported="true"
            android:theme="@style/Theme.SubjectivePlayer.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PreferencesActivity"
            android:exported="false"
            android:label="@string/app_name" />

        <activity
            android:name=".SessionActivity"
            android:exported="false"
            android:configChanges="orientation|screenSize|screenLayout"
            android:theme="@style/Theme.SubjectivePlayer.Fullscreen" />

        <activity
            android:name=".ConfigValidatorActivity"
            android:exported="false"
            android:label="@string/validate_title" />

    </application>

</manifest>
