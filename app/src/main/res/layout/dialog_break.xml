<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_break"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Centered content -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Break title -->
        <TextView
            android:id="@+id/break_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/break_title"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Break message -->
        <TextView
            android:id="@+id/break_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/break_message"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Timer/Status message -->
        <TextView
            android:id="@+id/break_timer_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Continue button -->
        <Button
            android:id="@+id/break_continue_button"
            android:layout_width="160dp"
            android:layout_height="56dp"
            android:text="@string/break_continue"
            android:enabled="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/submit_button_background"
            android:textColor="@color/black" />

    </LinearLayout>

</FrameLayout>
